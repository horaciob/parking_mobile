<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hbranciforte.trafficclient.Resume">

    <TextView
        android:text="Resumen de operaciÃ³n"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:textSize="25dp"
        android:textColor="#631212"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabel"
        />

    <TextView
        android:layout_below="@+id/txtLabel"
        android:text="Aceptado!"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:textColor="#225500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResumen"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    />
    <TextView
        android:layout_below="@+id/txtResumen"
        android:text="Detalle"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtData"
        android:paddingBottom="30dp"
      />
    <Button
        android:id="@+id/inicio"
        android:layout_below="@+id/txtData"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:textStyle="bold"
        android:onClick="goHome"
        />

</RelativeLayout>
